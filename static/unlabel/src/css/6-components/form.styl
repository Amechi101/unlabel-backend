.form {
}

.form__row {
  &--s-2 {
    display: flex
    
    // all children form__group
    & > .form__group {
      width: 50%
      
      // all children form__group except first one
      & + .form__group {
        margin-left: 24px
      }
    }
  }
  &--m-2 {
    @media $mq_m {
      display: flex
    }
    
    // all children form__group
    & > .form__group {
      @media $mq_m {
        width: 50%
      }
      
      // all children form__group except first one
      & + .form__group {
        @media $mq_m {
          margin-left: 32px
        }
      }
    }
  }
}

.form__group {
  margin-top: 24px
  
  @media $mq_m {
    margin-top: 32px
  }
}

.form__label {
}

.form__field {
  margin-top: 12px
}

.form__passwordSecurity {
  margin-top: 12px
  font-size: 11px
  font-family: $font_bold
  
  .password-security {
    @media $mq_m {
      margin-left: 16px
    }
  }
}

.form__actions {
  margin-top: 42px
  
  @media $mq_s_only {
    .cta {
      display: block
      width: 100%
      text-align: center
    }
    
    .cta + .cta {
      margin-top: 12px
    }
  }
    
  @media $mq_m {
    margin-top: 48px
    
    .cta + .cta {
      margin-left: 12px
    }
  }
}

.form__alternative {
  margin-top: 42px
  
  @media $mq_m {
    margin-top: 48px
  }
}