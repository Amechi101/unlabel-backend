.cta {
  display inline-block
  padding: 18px 32px 
  text-decoration: none
  cursor: pointer
  user-select: none
  white-space: nowrap
  font-size: font_size = 14px
  line-height font_size
  border: 2px solid $color_darkGrey
  color: $color_darkGrey
  font-family: $font_bold
  background: transparent
  border-radius: 0
  appearance: none
  
  &:hover {
    text-decoration: none
    color: $color_darkGrey
  }
  
  &--dark,
  &[type="submit"] {
    color: #fff
    background-color: $color_darkGrey
    border-color: $color_darkGrey
    
    &:hover {
      color: #fff
    }
  }
  
  &[type="submit"] {
    
  }
  
  &[disabled="disabled"] {
    cursor: default
    opacity: 0.5
  }
}