iconlink-resize(size, font_size) {
  width: size
  height: size
  font-size: font_size
  line-height font_size
}

.iconlink {
  position relative
  display inline-block
  iconlink-resize(40px, 20px)
  text-decoration: none
  cursor: pointer
  user-select: none
  color: currentColor
  vertical-align middle
  
  &--small {
    iconlink-resize(36px, 16px)
  }
  
  .fonticon {
    position absolute
    top: 50%
    left: 50%
    transform translate(-50%, -50%)
  }
}