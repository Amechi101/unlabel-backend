.select {
  position: relative
  
  &::before {
    position: absolute
    top: 50%
    right: 21px
    transform: translate(50%, -50%)
    display: block
    content: ''
    width: 0
    height: 0
    border-style: solid
    border-width: 5px 5px 0 5px
    border-color: $color_darkGrey transparent transparent transparent
  }
  
  select {
    position: relative
    display inline-block
    padding: 16px 42px 18px 16px
    font-size: 14px
    line-height: 18px
    border: 2px solid $color_darkGrey
    color: $color_darkGrey
    font-family: $font_bold
    background: transparent
    border-radius: 0
    appearance: none
    cursor: pointer
    width: 100%
    
    // if inside form
    form & {
      padding: 13px 16px
      border: 1px solid $color_formInput
      font-family: $font_regular
    }
  }
  
  &--borderLess {
    select {
      border-color: transparent
    }
  }
}