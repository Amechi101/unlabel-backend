.search-form {
  position: absolute
  bottom: 0
  left: 0
  width: 100%
}

.search-form__wrapper {
  position: relative
  max-width: 1120px
  padding: 45px 36px
  margin: 0 auto
  
  @media $mq_m {
    padding: 70px 32px
  }
}

.search-form__fieldset {
  position: relative
  padding-left: (40px + 16px) // submit width + gutter

  @media $mq_m {
    padding-left: (40px + 32px) // submit width + gutter
  }
}

.search-form__label {
  display: block
  font-family: $font_bold
  color: $color_grey
}

.search-form__field {
  input[type=text],
  input[type=search] {
    display: block
    width: 100%
    font-family: $font_display
    appearance: none
    border: 0
    border-radius: 0
    background-color: transparent
    color: #fff
    font-size: 32px
    margin-top: 16px
    text-transform: uppercase
    
    @media $mq_m {
      font-size: 64px
    }
    
    placeholder() {
      color: #333333
    }
  }
}

.search-form__submit {
  appearance: none
  border: 0
  border-radius: 0
  background-color: transparent
  color: #fff
  padding: 0
  
  position: absolute
  bottom: 0
  left: 0
  
  @media $mq_m {
    bottom: 15px // better alignement with search input
    .fonticon {
      font-size: 32px
    }
  }
}