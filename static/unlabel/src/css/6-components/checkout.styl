.checkout {}

.checkout__header {
  padding: 42px 0
  
  @media $mq_m {
    padding: 96px 0 48px
    display: flex
    justify-content: space-between
    align-items: center
  }
}

.checkout__headerNavList {
  @media $mq_s_only {
    margin-top 16px
  }
}

.checkout__headerNavListItem {
  display: inline-block
  
  & + .checkout__headerNavListItem {
    margin-left: 24px
    @media $mq_m {
      margin-left: 48px
    }
  }
}

.checkout__addressSection {
  padding: 48px 0
}

.checkout__addressIdenticalCheckbox {
  margin-top 16px
}

.checkout__addressForm {
  margin-top 42px
}

.checkout__paymentNav {
  background-color $color_product
  padding: 30px 0
}

.checkout__paymentNavWrapper {
  @media $mq_m {
    display: flex
    align-items: center
    justify-content: space-between
  }
}

.checkout__paymentNavGroup {
}

.checkout__paymentOptionsList {
  @media $mq_s_only {
    margin-top: 16px
  } 
  @media $mq_m {
    display: flex
    align-items: center
  }
}

.checkout__paymentOptionsListItem {
  
  & + .checkout__paymentOptionsListItem {
    @media $mq_s_only {
      margin-top: 16px
    }
    @media $mq_m {
      margin-left: 40px
    }
    @media $mq_l {
      margin-left: 80px
    }
  }
}

.checkout__bankcardList {
  display: inline-block
  word-wrap: nowrap
  white-space: nowrap
  margin-left: 20px
}

.checkout__bankcardListItem {
  display: inline-block

  & + .checkout__bankcardListItem {
    margin-left 7px
  }
}

.checkout__bankcardLogo {
  vertical-align middle
  display: inline-block
  background-color: #fff
  height: 36px
  width: 60px
  background-size 40px auto
  background-repeat no-repeat
  background-position: 50% 50%
  border-radius 3px
  
  for brand in ('american-express' 'visa' 'mastercard') {
    &--{brand} {
      background-image: url('../img/bankcard/'+brand+'_logo.svg')
    }
  }
}

