.drawer {
  z-index: 99
  position: fixed
  top: 0
  right: 0
  width: 100%
  height: 100vh
  display: none
}

.drawer__backdrop {
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  background-color: $color_darkGrey
  opacity: 0.7
}

.drawer__frame {
  position: absolute
  top: 0
  right: 0
  height: 100%
  width: calc(100% - 55px)
  background-color: #fff
}

.drawer__header {
  position: absolute
  z-index: 1
  top: 0
  left: 0
  width: 100%
  display: flex
  align-items: center
  flex-direction: row
  justify-content: space-between
  height: 83px
  padding: 0 16px
  border-bottom: 1px solid $color_lightGrey
  background-color: #fff
}

.drawer__scroller {
  padding: 84px 0 0 // header height
  height: calc(100vh)
  overflow-y: auto
}

.drawer__content {
  min-height: calc(100vh - 2 * 84px) // drawer height - header and footer heights -> allow footer to always be at the bottom
}

.drawer__footer {
  display: flex
  align-items: center
  flex-direction: row
  justify-content: space-between
  height: 84px
  padding: 0 16px
}

.drawer__item {
}

.drawer__list {
  // sublists
  .drawer__list {
    .drawer__link {
      &:not(.drawer__link--toggle) {
        background-color: $color_product
        border-bottom: 0
      }
    }
  }
}

.drawer__link {
  display: flex
  flex-direction: row
  align-items: center
  justify-content: space-between
  height: 54px
  padding: 0 16px
  font-family: $font_bold
  border-bottom: 1px solid $color_lightGrey
  
  &--toggle {
    & > .drawer__linkIcon {
      position: relative
      width: size = 34px
      height: size
      &::before,
      &::after {
        position: absolute
        top: 50%
        left: 50%
        content: ''
        display: block
        width: 14px
        height: 2px
        background-color: $color_darkGrey
        transform: translate(-50%, -50%)
      }
      
      &::after {
        transform: translate(-50%, -50%) rotate(0deg)
        transition(opacity transform)
      }
    }
    
    &.is-collapsed {
      & > .drawer__linkIcon::after {
        transform: translate(-50%, -50%) rotate(-90deg)
      }
    }
  }
  
  // all children except first one (flexbox gutter)
  & > * + * {
    margin-left: 16px
  }

  &--large {
    height: 84px
  }
}
