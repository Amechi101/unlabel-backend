// Generated by icomoon
icomoon-font-path ?= "../webfonts"

fonticon--carouselArrowLeft = "\e900"
fonticon--carouselArrowRight = "\e901"
fonticon--check = "\e902"
fonticon--dropdownArrow = "\e903"
fonticon--email = "\e904"
fonticon--facebook = "\e905"
fonticon--lock = "\e906"
fonticon--magnifyingglass = "\e907"
fonticon--pinterest = "\e908"
fonticon--trash = "\e909"
fonticon--twitter = "\e90a"

@font-face
  font-family 'fonticon'
  src url(icomoon-font-path + '/fonticon.eot?bghvtf')
  src url(icomoon-font-path + '/fonticon.eot?bghvtf#iefix') format('embedded-opentype'), url(icomoon-font-path + '/fonticon.ttf?bghvtf') format('truetype'), url(icomoon-font-path + '/fonticon.woff?bghvtf') format('woff'), url(icomoon-font-path + '/fonticon.svg?bghvtf#fonticon') format('svg')
  font-weight normal
  font-style normal

.fonticon
  font-family 'fonticon' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.fonticon--carouselArrowLeft
  &:before
    content fonticon--carouselArrowLeft
.fonticon--carouselArrowRight
  &:before
    content fonticon--carouselArrowRight
.fonticon--check
  &:before
    content fonticon--check
.fonticon--dropdownArrow
  &:before
    content fonticon--dropdownArrow
.fonticon--email
  &:before
    content fonticon--email
.fonticon--facebook
  &:before
    content fonticon--facebook
.fonticon--lock
  &:before
    content fonticon--lock
.fonticon--magnifyingglass
  &:before
    content fonticon--magnifyingglass
.fonticon--pinterest
  &:before
    content fonticon--pinterest
.fonticon--trash
  &:before
    content fonticon--trash
.fonticon--twitter
  &:before
    content fonticon--twitter
    
// Added for this project
.fonticon
  vertical-align middle
  text-indent: 0 // prevent disapearing if parent as negative indent to hide label 