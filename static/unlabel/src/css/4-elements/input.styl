input[type=text],
input[type=email],
input[type=password],
input[type=number] {
  appearance: none
  border-radius: 0
  background-color: #fff
  border: 1px solid $color_formInput
  padding: 12px
  line-height: 20px
  font-size: 14px
  width: 100%
  
  +placeholder() {
    color: #A3A3A3
  }
}

input[type=number] {
  &::-webkit-inner-spin-button,
  &::-webkit-outer-spin-button {
    -webkit-appearance: none
  }
}

input[type=checkbox] {
  
  display: none
  
  & + label {
    cursor: pointer
  }

  & + label::before {
    content: ''
    display: inline-block
    width: size = 20px
    height: size
    border: 2px solid #fff
    vertical-align middle
    margin: 8px 16px 8px 0
    box-shadow: 0 0 0 1px $color_formInput
  }
  
  &[checked=checked] + label::before,
  &:checked + label::before {
    background-color $color_darkGrey
  }
}